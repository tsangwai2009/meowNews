/* pages/detail/detail.wxss */
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    font-size: 36rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    background:rgba(18, 117, 199, 0.856);
}
.swiper-tab-item{
    width: 30%; 
    color:rgba(233, 233, 233, 0.5);
}
.active{
    color:#FFF;
    border-bottom: 4rpx solid #FFF;
    font-size: 40rpx;
    line-height: 80rpx;
}

.news-item{
  display: flex;
  margin: 0 40rpx;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  opacity: 0.85;
}
.news-item:last-child
{border-bottom: none;}